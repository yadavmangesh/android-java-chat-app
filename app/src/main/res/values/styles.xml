<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorControlHighlight">@color/secondaryDarkColor</item>
        <item name="android:textColorSecondary">@color/primaryTextColor</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_arrow_back_black_24dp</item>
        <item name="android:colorEdgeEffect">@color/secondaryDarkColor</item>
        <item name="dialogCornerRadius">15dp</item>
    </style>

    <style name="AppTheme.HelpText">
        <item name="android:textSize">12sp</item>

        <item name="android:color">@color/secondaryTextColor</item>
    </style>

    <style name="SelectableItemBackground">
        <item name="android:theme">@style/AppTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <style name="AttachmentTypeLabel">
        <item name="android:textColor">#ff999999</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
